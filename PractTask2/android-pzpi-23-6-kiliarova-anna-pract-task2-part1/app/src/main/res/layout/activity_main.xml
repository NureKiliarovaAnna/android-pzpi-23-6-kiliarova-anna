<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#EFEFEF">

    <TextView
        android:id="@+id/labelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Welcome to the App!"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonUpdateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onTextUpdateClick"
        android:text="@string/update_text" />

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/buttonToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onToastClick"
        android:text="@string/show_message" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="8dp"
            android:text="@string/text_a" />

        <Button
            android:id="@+id/buttonAction1"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onAction1Click"
            android:padding="8dp"
            android:text="@string/action1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="8dp"
            android:text="@string/text_b" />

        <Button
            android:id="@+id/buttonAction2"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onAction2Click"
            android:padding="8dp"
            android:text="@string/action2" />
    </GridLayout>

</LinearLayout>